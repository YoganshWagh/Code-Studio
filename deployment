@startuml

!define COMPONENT class

node "Web Server" {
  [Web Interface]
  [Review Controller]
}

node "Machine Learning Server" {
  [Spam Detection Model]
}

node "Database Server" {
  [Review Data]
}

database "Machine Learning Model Data" {
  [Model Training Data]
}

cloud "User" {
  [Web Browser]
}

[Web Browser] --> [Web Interface]
[Web Interface] --> [Review Controller]

[Review Controller] --> [Spam Detection Model]
[Spam Detection Model] --> [Review Data]

[Machine Learning Model] --> [Model Training Data]

@enduml
